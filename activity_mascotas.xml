<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:car_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ingvictorgarcia.tarea_mascotas.mascotas">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/linearLayout">
        <include android:id="@+id/miActionbar"
            layout="@layout/actionbar"
            >
        </include>

   </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/Rmascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/Iestrella"
        android:layout_width="@dimen/tamaño_iconosbarra"
        android:layout_height="@dimen/tamaño_iconosbarra"
        android:src="@drawable/estrella3"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/miActionbar"
        android:onClick="irDetallemascota"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/Tmascotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_principal"
        android:textColor="@color/titulos"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/miActionbar"
        />

</RelativeLayout>
