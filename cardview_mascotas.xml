<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CVmascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <ImageView
            android:id="@+id/Ifotoperro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/beagle"
            />
        <TextView
            android:id="@+id/TVnombrePerro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombreBeagle"
            android:layout_below="@id/Ifotoperro"
            android:textColor="@color/letra_Nombre"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/Blike"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/huesolike"
                 />

            <ImageView
                android:id="@+id/Ihuesoamarillo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/huesoamarillo"
                android:layout_marginLeft="270dp"
                android:layout_weight="0.60"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>